
<div id="project-detail" class="wrapper">
  <div class="row header">
      <%= link_to "back", projects_path, :class => "cancel-btn" %>
     <div class="title"><%= resource.name %></div>
  </div>
  <%= render 'layouts/flash' %>
  <div class="project-snapshot">
      <span class="project-thumbnail project-cell">
          <%= image_tag(resource.video.video_thumbnail) %>
      </span>
      <span class="project-text project-cell">
          <div class="project-name"><%= resource.name %> </div>
          <div class="project-status ">
              <span class="label">Status:</span>
              <span class="status-status status-detail"><%= resource.status %></span>
              <span class="status-dash status-detail">-</span>
              <span class="status-number status-detail"><%= resource.estimates.count %></span>
              <span class="status-text status-detail">Estimates</span>
          </div>
      </span>
  </div>

   <div class="project-estimates">
       <% resource.estimates.each do | e | %>

           <div class="project-estimate">
               <div class="contractor-avatar"></div>
               <div class="contractor-detail">
                   <div class="contractor-row">
                       <div class="contractor-name bold-text"> <%= e.contractor.name %></div>
                   </div>
                   <div class="contractor-row">
                       <div class="contractor-cost">
                           <span class="c-label">Estimated Cost</span>
                           <span class="price bold-text"><%= e.range %></span>
                       </div>

                   </div>
                   <div class="contractor-row">
                       <div class="c-comments">  <%=  link_to "View Details", estimate_path(e)  %></div>
                   </div>
               </div>
               <div class="contractor-misc-images"></div>
           </div>
       <% end %>
  </div>
</div>

       
